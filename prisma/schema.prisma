generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GuestStatus {
  PENDENTE
  CONFIRMADO_PRESENCA
  CONFIRMADO_AUSENCIA
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  status      String    @default("active")
  date        DateTime?
  type        String?
  budget      Decimal?  @db.Decimal(10, 2)
  image       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  workspaceId String
  guests      Guest[]

  @@index([userId])
  @@index([workspaceId])
}

model Guest {
  id        String       @id @default(cuid())
  name      String
  phone     String?      // Telefone do convidado principal
  status    GuestStatus  @default(PENDENTE)
  projectId String
  project   Project      @relation(fields: [projectId], references: [id])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([projectId])
}
